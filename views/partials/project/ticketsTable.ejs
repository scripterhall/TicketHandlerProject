<div class="table-responsive h-100">
    <table class="table table-hover align-middle mb-0">
      <thead class="table-secondary">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Titre</th>
          <th scope="col">Statut</th>
          <th scope="col">Assigné à</th>
          <th scope="col">Créé le</th>
          <th scope="col">Description</th>
        </tr>
      </thead>
      <tbody id="ticketsTableBody">
        <% if (tickets.length === 0) { %>
          <tr>
            <td colspan="6" class="text-center py-4 text-muted">
              <i class="fas fa-ticket-alt fa-2x mb-2 d-block"></i>
              Aucun ticket trouvé pour ce projet.
            </td>
          </tr>
        <% } else { %>
          <% tickets.forEach((ticket, index) => { %>
            <tr>
              <th scope="row"><%= index+1 %></th>
              <td><%= ticket.title %></td>
              <td>
                <span id="ticket<%= ticket.id %>" class="badge bg-<%= ticket.state === 'Todo' ? 'danger' : ticket.state === 'Doing' ? 'warning' : 'success' %>">
                  <%= ticket.state %>
                </span>
              </td>
              <td> <img  src="/img/members/<%= ticket.assignee.avatar %>" 
                class="img-fluid rounded-circle"
                data-bs-toggle="tooltip" 
                data-bs-placement="right"
                data-bs-custom-class="custom-tooltip"
                data-bs-title="<%= ticket.assignee.name %>" 
                width="40" 
                height="40" />  </td>
              <td><%= new Date(ticket.createdAt).toLocaleDateString() %></td>
              <td><%= ticket.description %></td>
            </tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>
  </div>
  